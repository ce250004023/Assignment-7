#include <iostream>
using namespace std;

void joinArr(int arr1[], int arr2[],int arr3[], int n1, int n2);

int main(){
//size of arrays
        int n1{0};
        int n2{0};
	cout<<"Enter the size of 1st array:";
	cin>>n1;
	cout<<"Enter the size of 2nd array:";
	cin>>n2;
	//elements of arrays
	int arr1[n1] = {};
	int arr2[n2] = {};
	cout<<"Enter the elements of 1st array:";
	for (int i=0; i<n1;i++){
	    cin>>arr1[i];
	}
	cout<<endl;
	cout<<"Enter the elements of 2st array:";
	for (int i=0; i<n2;i++){
	    cin>>arr2[i];
	}
	//arrays
	cout<<"[";
	for (int i = 0;i<n1;i++){
	    cout<<arr1[i]<<" ";
	}
	cout<<"]";
	cout<<endl;
	cout<<"[";
	for (int i = 0;i<n2;i++){
	    cout<<arr2[i]<<" ";
	}
	cout<<"]";
	cout<<endl;
	int arr3[n1+n2];
	joinArr(arr1,arr2,arr3,n1,n2);

	cout<<"[";
	for (int i = 0;i<n1+n2;i++){
	    cout<<arr3[i]<<" ";
	}
	cout<<"]";



	cout<<endl;
	return 0;
	}

	void joinArr(int arr1[], int arr2[],int arr3[], int n1, int n2){

	for (int i = 0;i<n1;i++){
	  arr3[i] = arr1[i];
	}
	for (int i = 0;i<n2;i++){
	  arr3[i+n1] = arr2[i];
	}
}

